@model Elasticsearch.Models.GetAlbums

<div class="text-right mb-3">
    <a href="@Url.Action("Edit", "Album", new { id = @Model.Id })" class="btn btn-primary">Modifier</a>
    <a href="#" class="btn btn-danger" data-toggle="modal" data-target="#deleteAlbum">Supprimer</a>
</div>

<h2>@Model.Name (@Model.Artist)</h2>

<small>@Model.Genres</small>

<div class="modal fade" id="deleteAlbum" tabindex="-1" role="dialog" aria-labelledby="deleteAlbum" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Supprimer un album</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        Voulez-vous vraiment supprimer l'album &laquo; @Model.Name &raquo; ?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
        <a href="@Url.Action("Delete", "Album", new { id = @Model.Id })" class="btn btn-danger">Supprimer</a>
      </div>
    </div>
  </div>
</div>