@model Elasticsearch.Models.ViewModels.AlbumViewModel

<h1>Modifier l'album &laquo; @Model.Album.Name &raquo;</h1>

@using (Html.BeginForm(FormMethod.Post, new { @id = "editAlbumForm" }))
{
    <div class="form-group">
        <label for="Name">Nom</label>
        @Html.TextBoxFor(Model => Model.Album.Name, new { @class="form-control", @value="@Model.Album.Name" })
    </div>
    <div class="form-group">
        <label for="Artist">Artiste :</label>
        <select class="form-control" name="Album.Artist">
            @foreach (Elasticsearch.Models.Artist artist in Model.Artists)
            {
                @if (artist.Id == Model.Album.Artist)
                {
                    <option value="@artist.Id" selected>@artist.Name</option>
                }
                else
                {
                    <option value="@artist.Id">@artist.Name</option>
                }
            }
        </select>
    </div>
    <div class="form-group">
        <label for="Year">Ann√©e :</label>
        @Html.TextBoxFor(Model => Model.Album.Year, new { @class="form-control", @value="@Model.Album.Year" })
    </div>
    <div class="form-group">
        <label for="Genres">Genres :</label>
        @Html.TextBoxFor(Model => Model.Album.Genres, new { @class="form-control", @value="@Model.Album.Genres" })
    </div>
    <div class="text-right">
        <button type="submit" id="editAlbumSubmit" class="btn btn-primary">Ajouter</button>
    </div>
}